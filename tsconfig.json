{
  "compilerOptions": {
    "rootDir": "./src",
    "composite": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "ES2015"],
    "baseUrl": ".",
    "jsx": "react-jsx",
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "allowJs": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "paths": {
      "@/*": ["./*"],
      "vite": ["node_modules/vite"]
    },
    "types": ["node"]
  },
  "exclude": ["./.vitepress/cache", "./lib"],
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.vue"]
}
